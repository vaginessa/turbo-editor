<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="FloatingActionButton">
        <attr name="drawable" format="integer"/>
        <attr name="colour" format="color"/>
        <attr name="shadowRadius" format="float"/>
        <attr name="shadowDx" format="float"/>
        <attr name="shadowDy" format="float"/>
        <attr name="shadowColor" format="integer"/>
    </declare-styleable>

    <declare-styleable name="Theme">

        <!-- Dialog styles -->
        <attr name="textAppearanceDialogTitle" format="reference"/>
        <attr name="textAppearanceDialogMessage" format="reference"/>
        <attr name="textAppearanceDialogInfo" format="reference"/>
    </declare-styleable>
</resources>